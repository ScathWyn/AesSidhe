{% extends 'base.html.twig' %}

{% block main %}
<div class="row">
	<div class="col-md-6">
		<div class="list-group">
		{% for character in characters %}
			<a href="{{ path('admin_character_show', { 'id': character.id }) }}" class="list-group-item list-group-item-action">
				{{ character.firstName }} {{ character.lastName }}, {{ character.nickname }} <br>
				Description : "{{character.description}}" <br>
				Lien image : "{{character.image}}"
			</a>
		{% endfor %}
		</div>
	<a class="btn btn-primary" href="{{ path('admin_character_update')}}" role="button">Add</a>
	</div>
</div>
{% endblock %}