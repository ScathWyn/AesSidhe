{% extends 'base.html.twig' %}
{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('css/custom/story_character.css') }}" />
{% endblock %}

{% block body %}
<div class="container-fluid" style="background-color: rgb(241, 235, 218);">
	<div class="row mt-3 mb-5 justify-content-middle">
		<div class="col">
			<h1 class="text-center">Choix du personnage</h1>
		</div>
	</div>
	<div class="row">
		{% for storyCharacter in storyCharacters %}
		<div class="col-md-4">
			<div class="row align-items-center justify-content-center">
				<div class="col-md-8">
					<div class="image-wrapper">
						<img src="{{ asset('images/' ~ storyCharacter.image) }}" class="img-fluid moving-effect" alt="Responsive image">
					</div>
					<ul class="list-group list-group-flush">
						<li class="list-group-item"><h2>{{ storyCharacter.nickName }}</h2></li>
						<li class="list-group-item"><h4>{{ storyCharacter.firstName }} {{ storyCharacter.lastName }}</h4></li>
					</ul>
				</div>
			</div>
		</div>
		{% endfor %}
	</div>
</div>
{% endblock %}
